<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_sale_quotation_report_template">
        <div class="page">
            <table style="width:100%;">
                <tbody>
                    <tr>
                        <td style="width:40%">
                            <img t-if="o.company_id.logo"
                                 t-att-src="'data:image/png;base64,%s' % to_text(o.company_id.logo)"
                                 style="width:100px;height:100px;"/>
                        </td>

                        <td style="padding-top:5px;width:60%;" align="right">
                            <h3>
                                <strong>
                                    <span t-field="o.company_id.name"/>
                                    <br/>
                                    <span t-field="o.company_id.street"/>
                                    <br/>
                                    <span t-field="o.company_id.street2"/>
                                    <br/>
                                    <span t-field="o.company_id.country_id.name"/>
                                    <span t-field="o.company_id.zip"/>
                                </strong>
                            </h3>
                        </td>
                    </tr>

                </tbody>
            </table>
            <table style="width:100%;
				border: 1px solid black;
				border-left: None;
				border-right: None;
				border-collapse: collapse;
                text-align:left">
                <tr style="border-left: None;">
                    <td style="width: 50%;border-right: 1px solid black;">
                        <table>
                            <tbody>
                                <tr>
                                    <strong>Invoicing Address:</strong>
                                    <br></br>
                                    <span t-field="o.partner_invoice_id.name"/>
                                    <br/>
                                    <t t-if="o.partner_invoice_id.street">
                                        <span t-field="o.partner_invoice_id.street"/>
                                        <br/>
                                    </t>
                                    <t t-if="o.partner_invoice_id.street2">
                                        <span t-field="o.partner_invoice_id.street2"/>
                                        <br/>
                                    </t>
                                    <span t-field="o.partner_invoice_id.state_id.name"/>
                                    <span></span>
                                    <span t-field="o.partner_invoice_id.zip"/>

                                    <br/>
                                    <span t-field="o.partner_invoice_id.country_id"/>
                                    <br/>
                                    <span t-field="o.partner_invoice_id.mobile"/>

                                </tr>
                            </tbody>
                        </table>
                    </td>
                    <td style="width: 50%; text-align:right;">
                        <table>
                            <tbody>
                                <tr>
                                    <strong>Shipping Address:</strong>
                                    <br></br>
                                    <span t-field="o.partner_shipping_id.name"/>
                                    <br/>
                                    <t t-if="o.partner_shipping_id.street">
                                        <span t-field="o.partner_shipping_id.street"/>
                                        <br/>
                                    </t>
                                    <t t-if="o.partner_shipping_id.street2">
                                        <span t-field="o.partner_shipping_id.street2"/>
                                        <br/>
                                    </t>
                                    <span t-field="o.partner_shipping_id.state_id.name"/>
                                    <span></span>
                                    <span t-field="o.partner_shipping_id.zip"/>
                                    <br/>
                                    <span t-field="o.partner_shipping_id.country_id"/>
                                    <br/>
                                    <span t-field="o.partner_shipping_id.mobile"/>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </table>

            <table style="width:100%;">
                <tr>
                    <td style="width:50%;text-align:left;font-size:16px;">
                        <strong>Quotation No #</strong>
                        <strong>
                            <span t-field="o.name"/>
                        </strong>
                    </td>
                    <td style="width:50%;text-align:right;font-size:16px;">
                        <strong>Quotation Date:</strong>
                        <strong>
                            <span t-field="o.date_order" t-options='{"format": "dd/MM/yyyy"}'/>
                        </strong>
                    </td>
                </tr>
            </table>


            <table class="table table-sm o_main_table " style="width:100%;margin-top:2%;line-height:2;">
                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                <thead style="display: table-row-group">
                    <tr>
                        <th style="border-top:1px solid ;border-bottom:1px solid" name="th_description"
                            class="text-left">Description
                        </th>
                        <th style="border-top:1px solid;border-bottom:1px solid" name="th_quantity" class="text-right">
                            Quantity
                        </th>
                        <th style="border-top:1px solid;border-bottom:1px solid" name="th_priceunit" class="text-right">
                            Unit Price
                        </th>
                        <th style="border-top:1px solid;border-bottom:1px solid" name="th_taxes" class="text-right">
                            Taxes
                        </th>
                        <th style="border-top:1px solid;border-bottom:1px solid" name="th_subtotal" class="text-right">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                            <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                        </th>


                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="o.order_line" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                           groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                           groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td name="td_name">
                                    <span t-field="line.name"/>
                                </td>
                                <td name="td_quantity" class="text-right">
                                    <span t-field="line.product_uom_qty"/>
                                    <span t-field="line.product_uom"/>
                                </td>
                                <td name="td_priceunit" class="text-right">
                                    <span t-field="line.price_unit"/>
                                </td>
                                <td name="td_taxes" class="text-right">
                                    <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                </td>
                                <td name="td_subtotal" class="text-right o_price_total">
                                    <span t-field="line.price_subtotal"
                                          groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <span t-field="line.price_total"
                                          groups="account.group_show_line_subtotals_tax_included"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.pricelist_id.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
            <table style="width:32%;margin-left:auto;line-height:2;">
                <thead>
                        <tr>
                            <th style="border-top:1px solid ;border-bottom:1px solid rgb(140,140,140);text-align:left;" name="th_price_subtotal"
                                >Sub Total
                            </th>
                            <td style="border-top:1px solid ;border-bottom:1px solid rgb(140,140,140);" name="th_price_subtotal"
                                class="text-left"><span t-field="o.amount_total"/>
                            </td>
                        </tr>

                            <th style="border-top:1px solid ;border-bottom:1px solid rgb(140,140,140);text-align:left;" name="th_amount_total"
                                >Total
                            </th>
                            <td style="border-top:1px solid ;border-bottom:1px solid rgb(140,140,140);" name="th_amount_total"
                                class="text-left"><span t-field="o.amount_total"/>
                            </td>



<!--                        <tr>-->
<!--                            <th style="border-bottom:1px solid;text-align:left;" class="td_class"> Total</th>-->
<!--                            <td style="border-bottom:1px solid" class="td_class"><span t-field="o.order_line.amount_total"/>-->
<!--                        </tr>-->
                </thead>
            </table>
             <table style="width:100%;">
                <tr>
                    <td style="width:50%;text-align:left;font-size:16px;">
                        <normel>payment terms:</normel>
                        <normel>
                            <span t-field="o.payment_term_id"/>
                        </normel>
                    </td>
                </tr>
            </table>
        </div>


        <footer class="footer"  style="position:fixed;bottom:10;">
            <div style="font-family: Calibri; text-align:center;">
                <hr style="width:100%;color:black;background-color:black">
                    <div style="font-size: 20px;"><b>**This is a Computer Generated Document.Signature Is Not Required.**</b></div>
                <div style="font-size: 18px;">+65628339251|contact@allworldshops.com:www.allworldconnect.com</div>
                </hr>
            </div>
        </footer>
    </template>

    <template id="report_sale_quotation_action">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="ppts_sales_quotation_report.report_sale_quotation_report_template"/>
            </t>
        </t>
    </template>
</odoo>